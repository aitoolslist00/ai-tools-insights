---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import AnimatedCounter from '../components/AnimatedCounter';
import NewsletterSignup from '../components/NewsletterSignup';
import { db } from '../lib/db';

const recentArticles = await db.prepare('SELECT * FROM articles WHERE status = ? ORDER BY published_at DESC LIMIT 8')
  .all('published') as any[];

const featuredTools = await db.prepare('SELECT * FROM ai_tools WHERE status = ? ORDER BY published_at DESC LIMIT 8')
  .all('published') as any[];
---

<BaseLayout 
  title="AI Tools Insights | Discover the Latest AI Tools, Reviews & Tutorials"
  description="Your comprehensive resource for AI tools reviews, comparisons, and tutorials. Stay updated with the latest AI technology insights."
>
  <Header slot="header" />
  
  <section class="section-padding bg-white dark:bg-gray-950">
    <div class="container-custom text-center">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-4 text-balance text-gray-900 dark:text-white">
        Discover the Best <span class="text-blue-600 dark:text-blue-500">AI Tools</span>
      </h1>
      <p class="text-lg md:text-xl mb-8 text-gray-600 dark:text-gray-400 max-w-2xl mx-auto text-balance">
        Comprehensive reviews, comparisons, and tutorials to help you master the latest AI technology
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-3 mb-12">
        <a href="/ai-tools" class="btn btn-primary">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
          Explore AI Tools
        </a>
        <a href="/blog" class="btn btn-outline">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
          Read Blog
        </a>
      </div>
      
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 max-w-3xl mx-auto pt-8 border-t border-gray-200 dark:border-gray-800">
        <div class="text-center">
          <div class="text-2xl md:text-3xl font-bold text-blue-600 dark:text-blue-500 mb-1">
            <AnimatedCounter client:visible end={500} suffix="+" />
          </div>
          <div class="text-sm text-gray-600 dark:text-gray-400">AI Tools Reviewed</div>
        </div>
        <div class="text-center">
          <div class="text-2xl md:text-3xl font-bold text-blue-600 dark:text-blue-500 mb-1">
            <AnimatedCounter client:visible end={1000} suffix="+" />
          </div>
          <div class="text-sm text-gray-600 dark:text-gray-400">Articles Published</div>
        </div>
        <div class="text-center">
          <div class="text-2xl md:text-3xl font-bold text-blue-600 dark:text-blue-500 mb-1">
            <AnimatedCounter client:visible end={50} suffix="K+" />
          </div>
          <div class="text-sm text-gray-600 dark:text-gray-400">Monthly Readers</div>
        </div>
        <div class="text-center">
          <div class="text-2xl md:text-3xl font-bold text-blue-600 dark:text-blue-500 mb-1">
            <AnimatedCounter client:visible end={100} suffix="%" />
          </div>
          <div class="text-sm text-gray-600 dark:text-gray-400">Free Content</div>
        </div>
      </div>
    </div>
  </section>
  
  <section class="section-padding container-custom bg-gray-50 dark:bg-gray-900/50">
    <div class="text-center mb-10">
      <h2 class="text-3xl md:text-4xl font-bold mb-3 text-gray-900 dark:text-white">Featured AI Tools</h2>
      <p class="text-base text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
        Explore our hand-picked selection of the most powerful and innovative AI tools
      </p>
    </div>
    
    {featuredTools.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {featuredTools.map((tool) => (
          <a 
            href={`/ai-tools/${tool.slug}`} 
            class="bento-item p-5 group"
          >
            <div class="flex items-start justify-between mb-3">
              {tool.logo_url && (
                <div class="p-2 bg-gray-100 dark:bg-gray-800 rounded-lg">
                  <img src={tool.logo_url} alt={tool.name} class="w-10 h-10 object-contain" />
                </div>
              )}
              <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
              </svg>
            </div>
            
            <h3 class="text-lg font-semibold mb-2 text-gray-900 dark:text-white">
              {tool.name}
            </h3>
            
            <p class="text-sm text-gray-600 dark:text-gray-400 mb-3 line-clamp-2">
              {tool.description}
            </p>
            
            {tool.category && (
              <span class="badge badge-primary">{tool.category}</span>
            )}
          </a>
        ))}
      </div>
    ) : (
      <div class="text-center py-12 bg-white dark:bg-gray-900 rounded-lg border border-gray-200 dark:border-gray-800">
        <svg class="w-12 h-12 mx-auto mb-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
        </svg>
        <p class="text-gray-600 dark:text-gray-400">No AI tools available yet. Check back soon!</p>
      </div>
    )}
    
    <div class="text-center mt-8">
      <a href="/ai-tools" class="btn btn-outline">
        View All AI Tools
        <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
      </a>
    </div>
  </section>
  
  <section class="section-padding container-custom bg-white dark:bg-gray-950">
    <div class="text-center mb-10">
      <h2 class="text-3xl md:text-4xl font-bold mb-3 text-gray-900 dark:text-white">Latest Articles</h2>
      <p class="text-base text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
        Stay updated with insights, tutorials, and industry news from the AI world
      </p>
    </div>
    
    {recentArticles.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {recentArticles.map((article) => (
          <a 
            href={`/blog/${article.slug}`} 
            class="card-hover overflow-hidden group"
          >
            {article.featured_image && (
              <div class="relative overflow-hidden aspect-video bg-gray-100 dark:bg-gray-800">
                <img 
                  src={article.featured_image} 
                  alt={article.title} 
                  class="w-full h-full object-cover" 
                />
              </div>
            )}
            <div class="p-5">
              <div class="flex items-center gap-2 mb-2">
                <span class="badge badge-primary">{article.category}</span>
                {article.published_at && (
                  <span class="text-xs text-gray-500 dark:text-gray-500">
                    {new Date(article.published_at).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}
                  </span>
                )}
              </div>
              <h3 class="text-lg font-semibold mb-2 text-gray-900 dark:text-white line-clamp-2">{article.title}</h3>
              <p class="text-sm text-gray-600 dark:text-gray-400 line-clamp-2">{article.excerpt}</p>
            </div>
          </a>
        ))}
      </div>
    ) : (
      <div class="text-center py-12 bg-gray-50 dark:bg-gray-900/50 rounded-lg border border-gray-200 dark:border-gray-800">
        <svg class="w-12 h-12 mx-auto mb-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
        </svg>
        <p class="text-gray-600 dark:text-gray-400">No articles available yet. Check back soon!</p>
      </div>
    )}
    
    <div class="text-center mt-8">
      <a href="/blog" class="btn btn-outline">
        View All Articles
        <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
      </a>
    </div>
  </section>
  
  <section class="section-padding container-custom bg-gray-50 dark:bg-gray-900/50">
    <div class="text-center mb-10">
      <h2 class="text-3xl md:text-4xl font-bold mb-3 text-gray-900 dark:text-white">Why Choose AI Tools Insights?</h2>
      <p class="text-base text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
        Your trusted partner in navigating the AI tools landscape
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="text-center p-6 rounded-lg bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-800">
        <div class="w-12 h-12 mx-auto mb-4 bg-blue-600 dark:bg-blue-500 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <h3 class="text-lg font-semibold mb-2 text-gray-900 dark:text-white">In-Depth Reviews</h3>
        <p class="text-sm text-gray-600 dark:text-gray-400">
          Comprehensive analysis of AI tools with real-world testing and expert insights
        </p>
      </div>
      
      <div class="text-center p-6 rounded-lg bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-800">
        <div class="w-12 h-12 mx-auto mb-4 bg-blue-600 dark:bg-blue-500 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
          </svg>
        </div>
        <h3 class="text-lg font-semibold mb-2 text-gray-900 dark:text-white">Fair Comparisons</h3>
        <p class="text-sm text-gray-600 dark:text-gray-400">
          Side-by-side comparisons to help you choose the perfect tool for your needs
        </p>
      </div>
      
      <div class="text-center p-6 rounded-lg bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-800">
        <div class="w-12 h-12 mx-auto mb-4 bg-blue-600 dark:bg-blue-500 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
        </div>
        <h3 class="text-lg font-semibold mb-2 text-gray-900 dark:text-white">Practical Tutorials</h3>
        <p class="text-sm text-gray-600 dark:text-gray-400">
          Step-by-step guides to master AI tools effectively and boost your productivity
        </p>
      </div>
    </div>
  </section>
  
  <section class="section-padding container-custom bg-white dark:bg-gray-950">
    <NewsletterSignup client:load />
  </section>
  
  <Footer slot="footer" />
</BaseLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
