---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { db } from '../../lib/db';

export const prerender = false;

const allArticles = await db.prepare('SELECT * FROM articles WHERE status = ? ORDER BY published_at DESC')
  .all('published') as any[];

const categories = ['Reviews', 'Comparisons', 'Tutorials', 'Industry News', 'Development'];
---

<BaseLayout 
  title="Blog | AI Tools Insights"
  description="Read our latest articles about AI tools, including reviews, comparisons, tutorials, and industry news."
>
  <Header slot="header" />
  
  <div class="container-custom section-padding">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-12 animate-fade-in">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">
          AI Tools <span class="gradient-text">Blog</span>
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
          Stay updated with the latest insights, reviews, and tutorials about AI tools
        </p>
      </div>
      
      <div class="mb-12">
        <div class="flex flex-col sm:flex-row gap-4 mb-6">
          <div class="relative flex-1">
            <svg class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            <input
              type="search"
              id="search-input"
              placeholder="Search articles..."
              class="input pl-12"
            />
          </div>
          <button class="btn btn-ghost sm:w-auto">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
            </svg>
            Filters
          </button>
        </div>
        
        <div class="flex flex-wrap gap-3">
          <button 
            class="category-filter px-4 py-2 rounded-lg font-medium transition-all duration-200 bg-blue-600 text-white shadow-md hover:shadow-lg" 
            data-category="all"
          >
            All Articles
          </button>
          {categories.map(category => (
            <button 
              class="category-filter px-4 py-2 rounded-lg font-medium transition-all duration-200 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 hover:border-blue-500 dark:hover:border-blue-400 hover:shadow-md"
              data-category={category}
            >
              {category}
            </button>
          ))}
        </div>
      </div>
      
      {allArticles.length > 0 ? (
        <div id="articles-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
          {allArticles.map((article, index) => (
            <a 
              href={`/blog/${article.slug}`}
              class="article-card card-hover overflow-hidden group animate-scale-in"
              data-category={article.category}
              data-title={article.title.toLowerCase()}
              data-excerpt={article.excerpt.toLowerCase()}
              style={`animation-delay: ${index * 50}ms`}
            >
              {article.featured_image ? (
                <div class="relative overflow-hidden aspect-video bg-gradient-to-br from-blue-100 to-purple-100 dark:from-blue-900/20 dark:to-purple-900/20">
                  <img 
                    src={article.featured_image} 
                    alt={article.title} 
                    class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500" 
                  />
                  <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                </div>
              ) : (
                <div class="relative overflow-hidden aspect-video bg-gradient-to-br from-blue-100 to-purple-100 dark:from-blue-900/20 dark:to-purple-900/20 flex items-center justify-center">
                  <svg class="w-16 h-16 text-blue-500/30 dark:text-blue-400/30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                  </svg>
                </div>
              )}
              <div class="p-6">
                <div class="flex items-center gap-2 mb-3">
                  <span class="badge badge-primary text-xs">{article.category}</span>
                  {article.published_at && (
                    <span class="text-xs text-gray-500 dark:text-gray-500">
                      {new Date(article.published_at).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}
                    </span>
                  )}
                </div>
                <h2 class="text-xl font-bold mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors line-clamp-2">{article.title}</h2>
                <p class="text-gray-600 dark:text-gray-400 mb-4 line-clamp-3">{article.excerpt}</p>
                <span class="text-blue-600 dark:text-blue-400 font-medium inline-flex items-center group-hover:gap-2 transition-all">
                  Read article
                  <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                  </svg>
                </span>
              </div>
            </a>
          ))}
        </div>
      ) : (
        <div class="text-center py-16 bg-gray-50 dark:bg-gray-800/50 rounded-2xl">
          <svg class="w-16 h-16 mx-auto mb-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
          </svg>
          <p class="text-xl text-gray-600 dark:text-gray-400 mb-2">
            No articles available yet
          </p>
          <p class="text-gray-500 dark:text-gray-500">
            Check back soon for insightful articles about AI tools!
          </p>
        </div>
      )}
      
      <div id="no-results" class="hidden text-center py-16">
        <svg class="w-16 h-16 mx-auto mb-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
        <p class="text-xl text-gray-600 dark:text-gray-400 mb-2">No articles found</p>
        <p class="text-gray-500 dark:text-gray-500">Try adjusting your search or filters</p>
      </div>
    </div>
  </div>
  
  <Footer slot="footer" />
</BaseLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

<script is:inline>
  let currentCategory = 'all';
  let searchTerm = '';
  
  const filterButtons = document.querySelectorAll('.category-filter');
  const searchInput = document.getElementById('search-input');
  const articlesGrid = document.getElementById('articles-grid');
  const noResults = document.getElementById('no-results');
  const articleCards = document.querySelectorAll('.article-card');
  
  function filterArticles() {
    let visibleCount = 0;
    
    articleCards.forEach(card => {
      const category = card.getAttribute('data-category');
      const title = card.getAttribute('data-title');
      const excerpt = card.getAttribute('data-excerpt');
      
      const matchesCategory = currentCategory === 'all' || category === currentCategory;
      const matchesSearch = searchTerm === '' || 
        title.includes(searchTerm.toLowerCase()) || 
        excerpt.includes(searchTerm.toLowerCase());
      
      if (matchesCategory && matchesSearch) {
        card.classList.remove('hidden');
        visibleCount++;
      } else {
        card.classList.add('hidden');
      }
    });
    
    if (visibleCount === 0) {
      articlesGrid?.classList.add('hidden');
      noResults?.classList.remove('hidden');
    } else {
      articlesGrid?.classList.remove('hidden');
      noResults?.classList.add('hidden');
    }
  }
  
  filterButtons.forEach(button => {
    button.addEventListener('click', () => {
      filterButtons.forEach(btn => {
        btn.classList.remove('bg-blue-600', 'text-white', 'shadow-md');
        btn.classList.add('bg-white', 'dark:bg-gray-800', 'border', 'border-gray-200', 'dark:border-gray-700');
      });
      
      button.classList.add('bg-blue-600', 'text-white', 'shadow-md');
      button.classList.remove('bg-white', 'dark:bg-gray-800', 'border', 'border-gray-200', 'dark:border-gray-700');
      
      currentCategory = button.getAttribute('data-category');
      filterArticles();
    });
  });
  
  searchInput?.addEventListener('input', (e) => {
    searchTerm = e.target.value;
    filterArticles();
  });
</script>
