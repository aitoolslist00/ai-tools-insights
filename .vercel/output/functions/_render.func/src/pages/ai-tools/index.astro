---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { db } from '../../lib/db';

export const prerender = false;

const allTools = await db.prepare('SELECT * FROM ai_tools WHERE status = ? ORDER BY published_at DESC')
  .all('published') as any[];

const categories = [...new Set(allTools.map(tool => tool.category).filter(Boolean))];
---

<BaseLayout 
  title="AI Tools Directory | AI Tools Insights"
  description="Browse our comprehensive directory of AI tools with detailed reviews, pricing, and features."
>
  <Header slot="header" />
  
  <div class="container-custom section-padding">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-12 animate-fade-in">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">
          AI Tools <span class="gradient-text">Directory</span>
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
          Discover and compare the latest AI tools to find the perfect solution for your needs
        </p>
      </div>
      
      <div class="mb-12">
        <div class="flex flex-col sm:flex-row gap-4 mb-6">
          <div class="relative flex-1">
            <svg class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            <input
              type="search"
              id="search-input"
              placeholder="Search AI tools..."
              class="input pl-12"
            />
          </div>
          <select id="sort-select" class="input sm:w-48">
            <option value="newest">Newest First</option>
            <option value="oldest">Oldest First</option>
            <option value="name-asc">Name (A-Z)</option>
            <option value="name-desc">Name (Z-A)</option>
          </select>
        </div>
        
        {categories.length > 0 && (
          <div class="flex flex-wrap gap-3">
            <button 
              class="category-filter px-4 py-2 rounded-lg font-medium transition-all duration-200 bg-blue-600 text-white shadow-md hover:shadow-lg" 
              data-category="all"
            >
              All Tools
            </button>
            {categories.map(category => (
              <button 
                class="category-filter px-4 py-2 rounded-lg font-medium transition-all duration-200 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 hover:border-blue-500 dark:hover:border-blue-400 hover:shadow-md"
                data-category={category}
              >
                {category}
              </button>
            ))}
          </div>
        )}
      </div>
      
      {allTools.length > 0 ? (
        <>
          <div class="mb-6 text-sm text-gray-600 dark:text-gray-400">
            Showing <span id="tool-count" class="font-semibold text-gray-900 dark:text-white">{allTools.length}</span> tools
          </div>
          
          <div id="tools-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
            {allTools.map((tool, index) => (
              <a 
                href={`/ai-tools/${tool.slug}`} 
                class="tool-card card-hover p-6 group animate-scale-in"
                data-category={tool.category || ''}
                data-name={tool.name.toLowerCase()}
                data-description={tool.description.toLowerCase()}
                data-date={tool.published_at || ''}
                style={`animation-delay: ${index * 50}ms`}
              >
                <div class="flex items-start justify-between mb-4">
                  <div class="flex-1">
                    {tool.logo_url && (
                      <div class="p-3 bg-gradient-to-br from-blue-50 to-purple-50 dark:from-blue-900/20 dark:to-purple-900/20 rounded-xl inline-block mb-4">
                        <img src={tool.logo_url} alt={tool.name} class="w-12 h-12 object-contain" />
                      </div>
                    )}
                  </div>
                  <svg class="w-5 h-5 text-gray-400 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                  </svg>
                </div>
                
                <h2 class="text-xl font-bold mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors line-clamp-2">{tool.name}</h2>
                <p class="text-gray-600 dark:text-gray-400 mb-4 line-clamp-3">{tool.description}</p>
                
                <div class="flex flex-wrap gap-2 mb-4">
                  {tool.category && (
                    <span class="badge badge-primary text-xs">{tool.category}</span>
                  )}
                  {tool.pricing && (
                    <span class="badge badge-secondary text-xs">{tool.pricing}</span>
                  )}
                </div>
                
                <div class="flex items-center text-blue-600 dark:text-blue-400 font-medium group-hover:gap-2 transition-all">
                  <span>Explore tool</span>
                  <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                  </svg>
                </div>
              </a>
            ))}
          </div>
        </>
      ) : (
        <div class="text-center py-16 bg-gray-50 dark:bg-gray-800/50 rounded-2xl">
          <svg class="w-16 h-16 mx-auto mb-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
          </svg>
          <p class="text-xl text-gray-600 dark:text-gray-400 mb-2">
            No AI tools available yet
          </p>
          <p class="text-gray-500 dark:text-gray-500">
            Check back soon for comprehensive AI tool reviews and comparisons!
          </p>
        </div>
      )}
      
      <div id="no-results" class="hidden text-center py-16">
        <svg class="w-16 h-16 mx-auto mb-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
        <p class="text-xl text-gray-600 dark:text-gray-400 mb-2">No tools found</p>
        <p class="text-gray-500 dark:text-gray-500">Try adjusting your search or filters</p>
      </div>
    </div>
  </div>
  
  <Footer slot="footer" />
</BaseLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

<script is:inline>
  let currentCategory = 'all';
  let searchTerm = '';
  let currentSort = 'newest';
  
  const filterButtons = document.querySelectorAll('.category-filter');
  const searchInput = document.getElementById('search-input');
  const sortSelect = document.getElementById('sort-select');
  const toolsGrid = document.getElementById('tools-grid');
  const noResults = document.getElementById('no-results');
  const toolCount = document.getElementById('tool-count');
  const toolCards = Array.from(document.querySelectorAll('.tool-card'));
  
  function sortTools() {
    toolCards.sort((a, b) => {
      const aName = a.getAttribute('data-name');
      const bName = b.getAttribute('data-name');
      const aDate = a.getAttribute('data-date');
      const bDate = b.getAttribute('data-date');
      
      switch(currentSort) {
        case 'newest':
          return new Date(bDate) - new Date(aDate);
        case 'oldest':
          return new Date(aDate) - new Date(bDate);
        case 'name-asc':
          return aName.localeCompare(bName);
        case 'name-desc':
          return bName.localeCompare(aName);
        default:
          return 0;
      }
    });
    
    toolCards.forEach(card => {
      toolsGrid?.appendChild(card);
    });
  }
  
  function filterTools() {
    let visibleCount = 0;
    
    toolCards.forEach(card => {
      const category = card.getAttribute('data-category');
      const name = card.getAttribute('data-name');
      const description = card.getAttribute('data-description');
      
      const matchesCategory = currentCategory === 'all' || category === currentCategory;
      const matchesSearch = searchTerm === '' || 
        name.includes(searchTerm.toLowerCase()) || 
        description.includes(searchTerm.toLowerCase());
      
      if (matchesCategory && matchesSearch) {
        card.classList.remove('hidden');
        visibleCount++;
      } else {
        card.classList.add('hidden');
      }
    });
    
    if (toolCount) {
      toolCount.textContent = visibleCount;
    }
    
    if (visibleCount === 0) {
      toolsGrid?.classList.add('hidden');
      noResults?.classList.remove('hidden');
    } else {
      toolsGrid?.classList.remove('hidden');
      noResults?.classList.add('hidden');
    }
  }
  
  filterButtons.forEach(button => {
    button.addEventListener('click', () => {
      filterButtons.forEach(btn => {
        btn.classList.remove('bg-blue-600', 'text-white', 'shadow-md');
        btn.classList.add('bg-white', 'dark:bg-gray-800', 'border', 'border-gray-200', 'dark:border-gray-700');
      });
      
      button.classList.add('bg-blue-600', 'text-white', 'shadow-md');
      button.classList.remove('bg-white', 'dark:bg-gray-800', 'border', 'border-gray-200', 'dark:border-gray-700');
      
      currentCategory = button.getAttribute('data-category');
      filterTools();
    });
  });
  
  searchInput?.addEventListener('input', (e) => {
    searchTerm = e.target.value;
    filterTools();
  });
  
  sortSelect?.addEventListener('change', (e) => {
    currentSort = e.target.value;
    sortTools();
    filterTools();
  });
</script>
